<!-- Main Wrapper -->
<div id="wrapper">

    <div class="content">


        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                            <a class="closebox"><i class="fa fa-times"></i></a>
                        </div>
                        لیست تمام ایستگاه ها
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table cellpadding="1" cellspacing="1" class="table">
                                <thead>
                                    <tr>
                                        <th>نام ایستگاه</th>
                                        <th>تلفن</th>
                                        <th>جزيیات</th>
                                        <th>ویرایش</th>

                                        <th>حذف</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% station.forEach(station => { %>
                                    <tr>

                                        <td><%= station.name %></td>
                                        <td><%= station.phone %></td>
                                        <td> <a href="/admin/station/<%= station._id %>/information" class="btn w-xs btn-primary btn-xs">جزيیات</a></td>
                                        <td> <a href="/admin/station/<%= station._id %>/edit"
                                                class="btn w-xs btn-info btn-xs">ویرایش</a></td>
                                        <td><a class="btn w-xs btn-danger btn-xs">حذف</a></td>
                                    </tr>

                                    <% }) %>



                                </tbody>
                            </table>
                        </div>

                    </div>
                    <div class="panel-footer">
                        این بخش در حال تکمیل شدن می باشد. </div>
                </div>
            </div>
        </div>


    </div>



</div>