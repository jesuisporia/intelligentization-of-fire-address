<section class="content">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="body">

                <ol class="breadcrumb">
                    <li>
                        <a href="/admin">
                            <i class="material-icons">home</i> خانه
                        </a>
                    </li>
                    <li>
                        <a href="/admin/post">
                            <i class="material-icons">home</i> نوشته ها
                        </a>
                    </li>
                    <li class="active">
                        <i class="material-icons">library_books</i> نوشته های منتشر شده
                    </li>
                </ol>

            </div>
        </div>
    </div>
    <%- include(viewPath('admin/post/master')) %>



    <div class="row clearfix">


        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        نوشته ها
                        <small>لیست تمام نوشته ها</small>
                    </h2>


                </div>
                <div class="body table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>






                                <th>عنوان</th>
                                <th>وضعیت</th>
                                <th>نویسنده</th>
                                <th>دسته</th>
                                <th>ویرایش</th>
                                <th>حذف</th>
                                <th>جزئیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% posts.docs.forEach(post => { %>
                            <tr>
                                <td><%= post.title %></td>
                                <td>
                                    <% if(post.condition === 0){ %>
                                    <p class="font-bold col-cyan">پیش نویس</p>
                                    <% } %>
                                    <% if(post.condition === 1){ %>
                                    <p class="font-bold col-teal">منتشر شده</p>
                                    <% } %>
                                    <% if(post.condition === 2){ %>
                                    <p class="font-bold col-orange">زمانبندی شده</p>
                                    <% } %>
                                </td>
                                <td><%= post.user.name %></td>


                                <td>
                                    <% post.categories.forEach(cat => { %>

                                    <div class="btn-group" role="group" aria-label="Third group">
                                        <button type="button" class="btn btn-default waves-effect"><%= cat.name %>
                                        </button>
                                    </div>
                                    <% }) %>
                                </td>

                                <td><a href="/admin/product/edite/<%= post._id %>"><span
                                            class="label bg-green">ویرایش</span></a></td>
                                <td><a href="/admin/product/delete/<%= post._id %>"><span
                                            class="label bg-red">حذف</span></a></td>

                                <td><a href="/admin/product/details/<%= post._id %>"><span
                                            class="label bg-blue">جزئیات</span></a></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="body">
                <nav>
                    <%- include(viewPath('layouts/pagination') ,{ pagination : posts}) %>

                </nav>
            </div>
        </div>
    </div>
</section>