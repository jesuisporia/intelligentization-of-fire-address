<!-- Main Wrapper -->
<div id="wrapper">

    <div class="content">

        <div class="row">
            <div class="col-lg-12">
                <section class="content">
                    <div class="container-fluid">
                        <!-- Image Gallery -->
                        <div class="block-header">
                            <h2>
                                همه ایستگاه‌ها
                            </h2>
                        </div>

                        <div class="row">
                            <!-- نمایش ایستگاه‌ها -->
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="card">
                                    <div class="header">
                                        <h2>
                                            ایستگاه‌ها
                                            <small>لیست تمام ایستگاه‌ها</small>
                                        </h2>
                                    </div>
                                    <div class="body table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>نام ایستگاه</th>
                                                    <th>آدرس</th>
                                                    <th>مدیریت</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% stations.forEach(station => { %>
                                                <tr>
                                                    <!-- لینک به صفحه جزئیات ایستگاه -->
                                                    <td><a href="/admin/stations/<%= station._id %>/details"><%= station.stationName %></a></td>
                                                    <td><%= station.stationAddress %></td>

                                                    <td>
                                                        <a href="/admin/stations/<%= station._id %>/edit" class="btn bg-green btn-xs waves-effect">ویرایش</a>
                                                        <form action="/admin/stations/<%= station._id %>?_method=DELETE" method="post" style="display:inline;">
                                                            <button type="submit" class="btn bg-red btn-xs waves-effect">حذف</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <!-- ادامه سایر کدهای صفحه -->
                        </div>
                    </div>
                </section>

            </div>
        </div>

    </div>

</div>
