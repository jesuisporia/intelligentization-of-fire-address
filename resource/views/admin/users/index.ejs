<section class="content">
    <div class="container-fluid">
        <!-- Image Gallery -->
        <div class="block-header">
            <h2>
                همه کاربران
            </h2>
        </div>

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            همه کاربران

                        </h2>
                        <ul class="header-dropdown m-r--5">
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown"
                                    role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">more_vert</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="/admin/gallerypicture/tableview"
                                            class=" waves-effect waves-block">نمایش جدولی</a>
                                    </li>
                                    <li><a href="/admin/gallerypicture" class=" waves-effect waves-block">نمایش
                                            ستونی</a>
                                    </li>
                                    <li><a href="/admin/gallerypicture/create" class=" waves-effect waves-block">افزودن
                                            تصویر
                                            جدید</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>


                </div>
            </div>

            <div class="col-lg-7 col-md-12 col-sm-12 col-xs-12 pull-right text-right">
                <div class="body lablepicture" style=" line-height: 36px; ">

                    <a href="/admin/user/create"><span class="label bg-light-blue">افزودن کاربر</span></a>
                    <a href="/admin/users/roles/create"><span class="label bg-light-green">افزودن سطح دسترسی</span></a>
                    <a href="/admin/users/permissions"><span class="label bg-orange"> اجازه دسترسی</span></a>
                    <a href="/admin/users/roles"><span class="label bg-red">سطوح دسترسی</span></a>
                    <a href="/admin/users/permissions/create"><span class="label bg-red">افزودن اجازه دسترسی</span></a>

                </div>
            </div>
            <div class="col-xs-5 col-sm-3 col-md-3 col-lg-3">
                <div class="demo-google-material-icon"> <i class="material-icons">search</i> <span
                        class="icon-name">جستجو</span> </div>
            </div>

            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 pull-right text-right">
                <p>
                    <b>`</b>
                </p>
                <div class="btn-group bootstrap-select form-control show-tick dropup"><button type="button"
                        class="btn dropdown-toggle btn-default" data-toggle="dropdown" title="Mustard"
                        aria-expanded="true"><span class="filter-option pull-left">Mustard</span>&nbsp;<span
                            class="bs-caret"><span class="caret"></span></span></button>
                    <div class="dropdown-menu open" style="max-height: 264px; overflow: hidden; min-height: 92px;">
                        <ul class="dropdown-menu inner" role="menu"
                            style="max-height: 254px; overflow-y: auto; min-height: 82px;">
                            <li class="dropdown-header " data-optgroup="1"><span class="text">Picnic</span></li>
                            <li data-original-index="0" data-optgroup="1" class="selected"><a tabindex="0"
                                    class="opt   waves-effect waves-block" style="" data-tokens="null"><span
                                        class="text">Mustard</span><span
                                        class="glyphicon glyphicon-ok check-mark"></span></a></li>
                            <li data-original-index="1" data-optgroup="1"><a tabindex="0"
                                    class="opt   waves-effect waves-block" style="" data-tokens="null"><span
                                        class="text">Ketchup</span><span
                                        class="glyphicon glyphicon-ok check-mark"></span></a></li>
                            <li data-original-index="2" data-optgroup="1"><a tabindex="0"
                                    class="opt   waves-effect waves-block" style="" data-tokens="null"><span
                                        class="text">Relish</span><span
                                        class="glyphicon glyphicon-ok check-mark"></span></a></li>
                            <li class="divider" data-optgroup="2div"></li>
                            <li class="dropdown-header " data-optgroup="2"><span class="text">Camping</span></li>
                            <li data-original-index="3" data-optgroup="2"><a tabindex="0"
                                    class="opt   waves-effect waves-block" style="" data-tokens="null"><span
                                        class="text">Tent</span><span
                                        class="glyphicon glyphicon-ok check-mark"></span></a></li>
                            <li data-original-index="4" data-optgroup="2"><a tabindex="0"
                                    class="opt   waves-effect waves-block" style="" data-tokens="null"><span
                                        class="text">Flashlight</span><span
                                        class="glyphicon glyphicon-ok check-mark"></span></a></li>
                            <li data-original-index="5" data-optgroup="2"><a tabindex="0"
                                    class="opt   waves-effect waves-block" style="" data-tokens="null"><span
                                        class="text">Toilet Paper</span><span
                                        class="glyphicon glyphicon-ok check-mark"></span></a></li>
                        </ul>
                    </div>
                </div>
                <button type="button" class="btn btn-primary waves-effect">فیلتر</button>
            </div>

            <div class="col-md-6">
                <div class="body">
                    <nav>
                        <ul class="pagination">
                            <li class="disabled">
                                <a href="javascript:void(0);">
                                    <i class="material-icons">chevron_left</i>
                                </a>
                            </li>
                            <li class="active"><a href="javascript:void(0);">1</a></li>
                            <li><a href="javascript:void(0);" class="waves-effect">2</a></li>
                            <li><a href="javascript:void(0);" class="waves-effect">3</a></li>
                            <li><a href="javascript:void(0);" class="waves-effect">4</a></li>
                            <li><a href="javascript:void(0);" class="waves-effect">5</a></li>
                            <li>
                                <a href="javascript:void(0);" class="waves-effect">
                                    <i class="material-icons">chevron_right</i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            کاربران
                            <small>لیست تمام کاربران</small>
                        </h2>


                    </div>
                    <div class="body table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>تصویر</th>
                                    <th>عنوان</th>
                                    <th>وضعیت</th>
                                    <th>ارسال پیام</th>
                                    <th>مدیریت</th>
                                    <th>ویرایش</th>
                                    <th>حذف</th>
                                    <th>جزئیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% posts.docs.forEach(post => { %>

                                <tr>
                                    <td><img src="<%= avatart(post.email) %>"
                                            style="width: 40px;height: 40px;border-radius: 50px;border: 2px solid #e9e9e9;">
                                    </td>
                                    <td><%= post.name.substr(0,6) %></td>
                                    <td>

                                        <% if(post.roles){ %>

                                        <% post.roles.forEach(role => { %>

                                        <div class="btn-group" role="group" aria-label="Third group">
                                            <button type="button" class="btn btn-default waves-effect"
                                                style=" font-size: 11px; "><%= role.name.substr(0,5) %>
                                            </button>
                                        </div>

                                        <% }) %>
                                        <% } %>

                                    </td>
                                    <td><a href="/admin/user/createpayam/<%= post.id%>"><span
                                                class="label bg-blue">ارسال پیام</span></a></td>
                                    <td>
                                        <form action="/admin/users/<%= post.id %>?_method=DELETE" method="post">
                                            <div class="btn-group btn-group-sm" style=" box-shadow: none; ">
                                                <a href="/admin/users/<%= post.id %>/toggleadmin">

                                                    <span
                                                        class="label bg-light-blue"><%= post.admin ? 'لغو مدیریت' : 'مدیریت' %></span>


                                                </a>
                                                <% if(post.admin) { %>


                                                <a href="/admin/users/<%= post.id %>/addrole"><span
                                                        class="label bg-light-green">اعمال سطح دسترسی</span></a>
                                                <% } %>
                                            </div>
                                        </form>
                                    </td>
                                    <td><button type="button" class="btn bg-green  btn-xs waves-effect">ویرایش</button>
                                    </td>
                                    <td>



                                        <form action="/admin/users/<%= post.id %>?_method=DELETE" method="post">

                                            <button type="submit" class="btn bg-red  btn-xs waves-effect">حذف</button>

                                        </form>




                                    </td>
                                    <td><button type="button" class="btn bg-info  btn-xs waves-effect">جزئیات</button>
                                    </td>


                                </tr>
                                <% }) %>


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>