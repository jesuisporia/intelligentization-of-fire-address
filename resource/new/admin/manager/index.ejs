<div id="wrapper">

    <div class="normalheader ">
        <div class="hpanel">
            <div class="panel-body">
                <a class="small-header-action" href="#">
                    <div class="clip-header">
                        <i class="fa fa-arrow-up"></i>
                    </div>
                </a>

                <div id="hbreadcrumb" class="pull-left m-t-lg">
                    <ol class="hbreadcrumb breadcrumb">
                        <li><a href="index-2.html">پیشخوان</a></li>
                        <li>
                            <span>مدیران</span>
                        </li>
                        <li class="active">
                            <span>لیست تمام مدیران</span>
                        </li>
                    </ol>
                </div>
                <h2 class="font-light m-b-xs">
                    مدیران </h2>
                <small>لیست تمام مدیران
                </small>
            </div>
        </div>
    </div>


    <div class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                            <a class="closebox"><i class="fa fa-times"></i></a>
                        </div>
                        شهروند مسئول
                    </div>
                    <div class="panel-body float-e-margins">
                        <div class="row">





                        </div>
                        <div class="row">


                            <div class="col-lg-3">
                                <div class="btn-group">
                                    <p>
                                        بخش سطوح دسترسی
                                    </p>
                                    <a href="/admin/users/permissions/create" class="btn w-xs btn-info btn-xs">
                                        اضافه کردن سطح دسترسی جدید
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="btn-group">
                                    <p>
                                        اجازه سطح دسترسی
                                    </p>
                                    <a href="/admin/users/roles/create" class="btn w-xs btn-danger btn-xs">
                                        اجازه سطح دسترسی
                                    </a>


                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">


                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                            <a class="closebox"><i class="fa fa-times"></i></a>
                        </div>
                        جدول مدیران
                    </div>
                    <div class="panel-body">
                        <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="example2"
                                        class="table table-striped table-bordered table-hover dataTable no-footer"
                                        role="grid" aria-describedby="example2_info">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting_asc" tabindex="0" aria-controls="example2"
                                                    rowspan="1" colspan="1" aria-sort="ascending"
                                                    aria-label="نام: activate to sort column descending"
                                                    style="width: 150px;">نام مدیر</th>
                                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1"
                                                    colspan="1" aria-label="موقعیت: activate to sort column ascending"
                                                    style="width: 246px;">شماره تلفن</th>



                                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1"
                                                    colspan="1"
                                                    aria-label="شروع تاریخ: activate to sort column ascending"
                                                    style="width: 109px;">تنظیمات</th>



                                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1"
                                                    colspan="1" aria-label="حقوق: activate to sort column ascending"
                                                    style="width: 81px;">ویرایش</th>

                                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1"
                                                    colspan="1" aria-label="یبل: activate to sort column ascending"
                                                    style="width: 81px;">حذف</th>
                                            </tr>
                                        </thead>
                                        <tbody>




                                            <% user.forEach(fireman => {  %>

                                            <tr>
                                                <td> <%= fireman.name %> </td>
                                                <td> <%= fireman.phone %> </td>
                                                <td>
                                                    
                                                    
                                                    <a href="/admin/manager/<%= fireman.id %>/toggleadmin" style="
                                                        display: initial;
                                                    "  class="btn w-xs btn-success btn-xs"><%= user.admin ? 'لغو مدیریت' : 'مدیریت' %></a>

                                                        <a href="/admin/manager/<%= fireman.id %>/addrole"  class="btn w-xs btn-primary btn-xs">اعمال سطح دسترسی</a>
                                                    
                                                    
                                                    </td>

                                                <td> <a href="/admin/manager/<%= fireman._id %>/edit"
                                                        class="btn w-xs btn-info btn-xs">ویرایش</a></td>
                                                <td><a href="/admin/manager/<%= fireman._id %>/destroy"
                                                        class="btn w-xs btn-danger btn-xs">حذف</a></td>
                                            </tr>

                                            <% })  %>


                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

</div>


